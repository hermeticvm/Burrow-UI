<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:textSize="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/amPmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <TextView
        android:id="@+id/debugTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEBUG"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="24dp"
        android:gravity="center"
        tools:ignore="SpUsage" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@drawable/edit_text_border"
        android:visibility="gone">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search_greyscale"
            android:layout_marginEnd="8dp"
            android:contentDescription="Search" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Search apps..."
            android:textColor="@color/text_primary"
            android:textColorHint="@color/disabled"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone" />

        <ImageView
            android:id="@+id/clearSearchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_greyscale"
            android:layout_marginStart="8dp"
            android:contentDescription="Clear search"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Search Toggle Button -->
    <ImageView
        android:id="@+id/searchToggleButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_search_greyscale"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Search apps"
        android:background="?android:attr/selectableItemBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- App list -->
        <ScrollView
            android:id="@+id/appScrollList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/appLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Alphabetical index - fixed width to prevent compression -->
        <LinearLayout
            android:id="@+id/alphabetLayout"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:layout_marginStart="8dp">
            
